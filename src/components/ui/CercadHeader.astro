---
import { CiTextAlignJustify } from "react-icons/ci";
import { BsFillPeopleFill } from "react-icons/bs";
---

<header
    class="flex space-x-5 justify-center w-full px-5 rounded-b-xl cursor-pointer transition"
>
    <a class="menu-item space-x-3" href="/comunidade">
        <BsFillPeopleFill className="h-5 w-5 transition" />
        <p>Comunidade</p>
    </a>

    <a class="menu-item space-x-3" href="/sobre/">
        <CiTextAlignJustify className="h-5 w-5 transition" />
        <p>Sobre</p>
    </a>
</header>

<style>
    .menu-item {
        display: flex;
        padding: 1rem 2rem;
        border: 1px solid black;
        box-shadow: 0 0 .25rem #0004;
        width: auto;
        justify-content: center;
        border-bottom-left-radius: 1rem;
        border-bottom-right-radius: 1rem;
        transition: 300ms;
    }
    .menu-item:hover {
        background-color: rgba(94, 180, 151, 0.603);
        border: 1px solid aquamarine;
    }
    .menu-item:hover * {
        fill: aquamarine;
        color: white;
    }
</style>